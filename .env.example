# Kotatsu Sync Server Environment Configuration
# Copy this file to .env and modify the values as needed

# MySQL Database Configuration
MYSQL_ROOT_PASSWORD=kotatsu_root_password
MYSQL_DATABASE=kotatsu_sync
MYSQL_USER=kotatsu_user
MYSQL_PASSWORD=kotatsu_password

# Kotatsu Sync Server Configuration
DATABASE_HOST=mysql
DATABASE_USER=kotatsu_user
DATABASE_PASSWORD=kotatsu_password
DATABASE_NAME=kotatsu_sync
DATABASE_PORT=3306

# JWT Secret - CHANGE THIS IN PRODUCTION!
JWT_SECRET=your_jwt_secret_change_this_in_production

# Allow new user registration (set to false after creating your accounts)
ALLOW_NEW_REGISTER=true

# Port Configuration
SYNC_SERVER_PORT=8081
MYSQL_PORT=3306